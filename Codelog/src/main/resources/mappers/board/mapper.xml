<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.spring.codelog.board.mapper.INewReplyMapper">
 <resultMap type="com.spring.codelog.board.model.ReplyTO" id="ReplyMap">
 
 </resultMap>

<!-- 댓글 쓰기 -->
<insert id="reply_write" parameterType="com.spring.codelog.board.model.ReplyTO">
    insert into p_reply
    values(0, #{bno}, #{grp}, 0, 0, #{writer}, #{content}, now())
</insert>

<!-- 모댓글일경우 no, grp 일치하게 함 -->
<update id="reply_check" parameterType="com.spring.codelog.board.model.ReplyTO">
    update p_reply set grp=#{grp}
    where no != grp
</update>

<!-- 모댓글이 삭제된 댓글일때 그에 딸린 답글들이 모두삭제되면 테이블에서 완전히 삭제한다 -->
<delete id="reply_delete_after_rereply_delete" parameterType="com.spring.codelog.board.model.ReplyTO">
    delete from p_reply
    where content="" and grp=#{grp}
</delete>

<!-- 답글 쓰기 -->
<insert id="rereply_write" parameterType="com.spring.codelog.board.model.ReplyTO">
    insert into p_reply
    values(0, #{bno}, #{grp}, 0, #{grpl}, #{writer}, #{content}, now())
</insert>

<!-- p_board에 댓글수 증가 -->
<update id="reply_up" parameterType="com.spring.codelog.board.model.ReplyTO">
    update p_board set reply=reply+1 
    where no=#{no}
</update>

<!-- 댓글 리스트 가져오기 -->
<select id="replyList" parameterType="com.spring.codelog.board.model.ReplyTO" resultType="com.spring.codelog.board.model.ReplyTO">
    select r.no, r.bno, r.grp, r.grpl, r.writer, r.content, date_format(wdate,'%Y-%m-%d') wdate, datediff(now(), wdate) wgap , u.profile
    from p_reply r left outer join user u
    on r.writer = u.nick
    where r.bno = #{bno}
    order by grp asc, grps desc
</select>


<!-- 댓글 추가/삭제시 댓글 갯수 가져오기 -->
<select id="reply_count" parameterType="com.spring.codelog.board.model.ReplyTO" resultType="com.spring.codelog.board.model.ReplyTO">
    select reply 
    from p_board
    where no=#{no}
</select>

<!-- 모댓글의 답글수를 카운트 -->
<select id="count_rereply" parameterType="com.spring.codelog.board.model.ReplyTO" resultType="int">
    select count(no)
    from p_reply
    where no != #{no} and grp = #{no}
</select>

<!-- 답글수를 카운트 -->
<select id="count_rereply_fromrereply" parameterType="com.spring.codelog.board.model.ReplyTO" resultType="int">
    select count(no)
    from p_reply
    where no != #{grp} and grp = #{grp}
</select>

<!-- 모댓글 삭제 - 답글 없음 -->
<delete id="reply_delete" parameterType="com.spring.codelog.board.model.ReplyTO">
    delete from p_reply
    where no=#{no}
</delete>

<!-- 모댓글 삭제 - 답글 있음 -->
<update id="reply_not_delete" parameterType="com.spring.codelog.board.model.ReplyTO">
    update p_reply set content="삭제된 댓글입니다."
    where no=#{no}
</update>

<!-- p_board에 댓글수 감소 -->
<update id="reply_down" parameterType="com.spring.codelog.board.model.ReplyTO">
    update p_board set reply=reply-1
    where no=#{no}
</update>

</mapper>